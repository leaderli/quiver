{
  "title": "schedule",
  "cells": [
    {
      "type": "text",
      "data": "\n\n\n\n\n\n\n<p style=\"margin: 0in;\"><!--StartFragment--><font face=\"Menlo\"><span style=\"color: black;\" lang=\"zh-CN\">配置类实现</span><span style=\"color: black;\" lang=\"en-US\"> </span><span style=\"color: rgb(112, 48, 160);\" lang=\"zh-CN\">SchedulingConfigurer</span><span style=\"color: rgb(112, 48, 160);\" lang=\"en-US\"> </span><span style=\"color: black;\" lang=\"en-US\">接口并重写 </span><span style=\"color: rgb(112, 48, 160);\" lang=\"zh-CN\">configureTasks</span><span lang=\"en-US\"> </span><span lang=\"en-US\">方法</span><span lang=\"zh-CN\">，注册一个定时任务线程池，这样每个定时任务都以单独的线程执行</span></font><!--EndFragment--></p>"
    },
    {
      "type": "text",
      "data": "\n\n\n\n\n\n<!--StartFragment-->\n\n<p style=\"margin: 0in;\"><font color=\"#009051\"><span lang=\"en-US\">@</span><span lang=\"zh-CN\">EnableScheduling</span></font><font face=\"Menlo\"><span lang=\"en-US\">&nbsp; </span><span lang=\"en-US\">开启定时任务执行机制</span><span lang=\"zh-CN\">，只需要配置一次即可</span></font></p>\n\n<!--EndFragment-->"
    },
    {
      "type": "code",
      "language": "java",
      "data": "import org.springframework.context.annotation.Configuration;\nimport org.springframework.scheduling.annotation.EnableScheduling;\nimport org.springframework.scheduling.annotation.SchedulingConfigurer;\nimport org.springframework.scheduling.config.ScheduledTaskRegistrar;\nimport java.util.concurrent.Executors;\n\n@Configuration\n@EnableScheduling\npublic class ScheduleConfig implements SchedulingConfigurer {\n  @Override\n  public void configureTasks(ScheduledTaskRegistrar taskRegistrar) {\n    taskRegistrar.setScheduler(Executors.newScheduledThreadPool(10));\n  }\n}\n"
    },
    {
      "type": "text",
      "data": "\n\n\n\n\n\n<!--StartFragment-->\n\n<p style=\"margin: 0in;\"><font face=\"Menlo\"><span lang=\"zh-CN\">通过</span><span lang=\"en-US\"> </span><span lang=\"en-US\"><font color=\"#009051\">@Scheduled</font></span><span lang=\"en-US\">&nbsp;\n注解表明该方法是个定时任务</span><span lang=\"zh-CN\">，定时任务规则如下</span></font></p>\n\n<!--EndFragment-->"
    },
    {
      "type": "text",
      "data": "\n\n\n\n\n\n<!--StartFragment-->\n\n<p style=\"margin:0in;font-family:Menlo;font-size:10.5pt\" lang=\"zh-CN\"><span style=\"color:olive;background:white\">@Scheduled</span><span style=\"color:black;\nbackground:white\">(fixedRate=</span><span style=\"color:blue;background:white\">5000</span><span style=\"color:black;background:white\">) &nbsp; &nbsp; &nbsp;&nbsp;</span><span lang=\"zh-CN\" style=\"font-size: 10.5pt; color: rgb(0, 176, 80); font-family: 'Microsoft YaHei'; background-color: white;\">每</span><span lang=\"en-US\" style=\"font-size: 10.5pt; color: rgb(0, 176, 80); font-family: 'Microsoft YaHei'; background-color: white;\">5秒执行</span></p><p style=\"margin:0in;font-family:Menlo;font-size:10.5pt\" lang=\"zh-CN\"><span lang=\"en-US\" style=\"font-size: 10.5pt; color: rgb(0, 176, 80); font-family: 'Microsoft YaHei'; background-color: white;\">\n\n\n\n\n\n<!--StartFragment-->\n\n\n\n<!--EndFragment--></span></p><p style=\"margin:0in;font-size:10.5pt\"><span style=\"font-family:Menlo;\ncolor:olive;background:white\" lang=\"zh-CN\">@Scheduled</span><span style=\"font-family:Menlo;color:black;background:white\" lang=\"zh-CN\">(cron=</span><span style=\"font-weight:bold;font-family:Menlo;color:green;background:white\" lang=\"zh-CN\">\"0</span><span style=\"font-weight:bold;font-family:&quot;Microsoft YaHei&quot;;\ncolor:green;background:white\" lang=\"en-US\"> </span><span style=\"font-weight:bold;\nfont-family:Menlo;color:green;background:white\" lang=\"zh-CN\">0/5</span><span style=\"font-weight:bold;font-family:&quot;Microsoft YaHei&quot;;color:green;background:\nwhite\" lang=\"en-US\"> </span><span style=\"font-weight:bold;font-family:Menlo;\ncolor:green;background:white\" lang=\"zh-CN\">*</span><span style=\"font-weight:bold;\nfont-family:&quot;Microsoft YaHei&quot;;color:green;background:white\" lang=\"en-US\"> </span><span style=\"font-weight:bold;font-family:Menlo;color:green;background:white\" lang=\"zh-CN\">*</span><span style=\"font-weight:bold;font-family:&quot;Microsoft YaHei&quot;;\ncolor:green;background:white\" lang=\"en-US\"> </span><span style=\"font-weight:bold;\nfont-family:Menlo;color:green;background:white\" lang=\"zh-CN\">*</span><span style=\"font-weight:bold;font-family:&quot;Microsoft YaHei&quot;;color:green;background:\nwhite\" lang=\"en-US\"> </span><span style=\"font-weight:bold;font-family:Menlo;\ncolor:green;background:white\" lang=\"zh-CN\">*\"</span><span style=\"font-family:\nMenlo;color:black;background:white\" lang=\"zh-CN\">) &nbsp; &nbsp;</span><span style=\"background-color: white; color: rgb(0, 176, 80); font-family: 'Microsoft YaHei'; font-size: 10.5pt;\">每整五分钟执行</span></p><p style=\"margin:0in;font-size:10.5pt\"><span style=\"background-color: white; color: rgb(0, 176, 80); font-family: 'Microsoft YaHei'; font-size: 10.5pt;\"><br></span></p><p style=\"margin:0in;font-size:10.5pt\"><span style=\"background-color: white; color: rgb(0, 176, 80); font-family: 'Microsoft YaHei'; font-size: 10.5pt;\">cron规则参考</span><a href=\"quiver-note-url/0B1308E0-F885-4CA6-808E-BE99DDB7E7F0\">crontab</a></p><p style=\"margin:0in;font-size:10.5pt\">cron的值可直接使用配置文件 类似<font color=\"#0096ff\">@Value</font></p>\n\n\n\n\n\n<!--StartFragment-->\n\n\n\n<!--EndFragment-->\n\n<!--EndFragment-->"
    }
  ]
}